<!DOCTYPE html>
<html lang="en">
<% const ejs = true; %>
<% include ../partials/head %>
  <style>
    @media screen and (max-width: 768px) {
      .size {
        display: none;
      }
    }

  </style>

  <body>
    <div id="dvt">
      <% include ../partials/navigation %>
        <div class="container landing-content">
          <div class="jumbotron w-100 d-flex">
            <div class="row w-100 align-self-center form-area" style="height:500px; overflow-y: scroll;">
              <div class="col-12">
                <h1 class="display-4">Log In</h1>
                <% if (messages.error == 'Failed to create token.') { %>
                  <p class="alert alert-danger" role="alert">Email or password is invalid.</p>
                  <% } else if (messages.error) { %>
                  <p class="alert alert-danger" role="alert">
                    <%= messages.error %>
                  </p>
                  <% } %>
                  <form role="form" action="/auth/local" method="post">
                    <div class="form-group">
                      <label>Email</label>
                      <input required name="email" type="email" class="form-control" />
                    </div>
                    <div class="form-group">
                      <label>Password</label>
                      <input required name="password" type="password" pattern=".{8,}" title="Must contain at least 8 or more characters"
                        class="form-control" />
                    </div>
                    <div class="container">
                      <div class="row mt-5">
                          <button class="btn btn-primary btn-block mb-4" type="submit"  >Log In</button>
                      </div>
                    </div>
                  </form>
              </div>
            </div>
          </div>
        </div>
    </div>
    <% include ../partials/footer %>
  </body>

</html>